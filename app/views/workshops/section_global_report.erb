<body>

<div class="page">
<h2 class="top-title">Fiche de pointage du <%= Date.today.beginning_of_week.strftime("%d") %> au <%= Date.today.end_of_week.strftime("%d %B %Y") %><br />
<% @section.nil? ? "Atelier: #{Workshop.find_by_id(current_user.status_number)}" : "Section: #{@section.section_name}" %>
</h2><br />

<% 
	 	
	 @global_hours_worked = 0
	 @global_normals_hours = 0
	 @global_h15 = 0
	 @global_h50 = 0
	 @global_h75 = 0
	 @global_h100 = 0
	 @global_pp = 0
	 @cash_amount = 0
%>

<table class="list-table">
	<thead>
		<tr>		
			<th width="24%">Matricule</th>		
			<th width="28%">Nom</th>	
			<th width="4%">
				<% if holiday?(@week_number, 1) %>
					<div style=" color:#000; font-weight:bold;">Lun</div>
				<% else %>
					Lun
				<% end %>				
			</th>
			<th width="4%">
				<% if holiday?(@week_number, 2) %>
					<div style=" color:#000; font-weight:bold;">Mar</div>
				<% else %>
					Mar
				<% end %>				
			</th>
			<th width="4%">
				<% if holiday?(@week_number, 3) %>
					<div style=" color:#000; font-weight:bold;">Mer</div>
				<% else %>
					Mer
				<% end %>				
			</th>
			<th width="4%">
				<% if holiday?(@week_number, 4) %>
					<div style=" color:#000; font-weight:bold;">Jeu</div>
				<% else %>
					Jeu
				<% end %>				
			</th>
			<th width="4%">
				<% if holiday?(@week_number, 5) %>
					<div style=" color:#000; font-weight:bold;">Ven</div>
				<% else %>
					Ven
				<% end %>				
			</th>
			<th width="4%">
				<% if holiday?(@week_number, 6) %>
					<div style=" color:#000; font-weight:bold;">Sam</div>
				<% else %>
					Sam
				<% end %>				
			</th>
			<th width="4%">
				<% if holiday?(@week_number, 0) %>
					<div style=" color:#000; font-weight:bold;">Dim</div>
				<% else %>
					Dim
				<% end %>				
			</th>
			<th width="5%">NH</th>	
			<th width="5%">H15%</th>
			<th width="5%">H50%</th>		
			<th width="5%">H75%</th>
			<th width="5%">H100%</th>
			<th width="5%">HN</th>
			<th width="5%">PP</th>
		</tr>
	</thead>
	<tbody>		
		<% if @teams.empty? %>
			<tr>
				<td colspan = 16 class = "ui-widget-content" >Aucun pointage à afficher</td>									
			</tr>
		<% else %>
<!-- Temporaires normaux -->
			<% @teams.each do |team| %>
<!-- On détermine les temporaires normaux de l'équipe -->
				<tr>
					<td colspan = 16 class = "ui-widget-content" ><h3><%= team.team_name %> - Normaux</h3></td>
				</tr>
				<% 
					@raw_casuals = team.casuals.where("casual_type_id = #{CasualType.find_by_type_name("Normal").id}") 
				%>
				<% if @raw_casuals.empty? %>	
					<tr>				
						<td colspan = 16 class = "ui-widget-content" >Aucun pointage à afficher</td>	
					</tr>													
				<% else %>
					<% @raw_casuals.each do |casual| %>
<!-- si le temporaire n'a pas de pointage pour cette semaine -->
						<tr>
							<%= render :partial => "normals_section_global_report", :locals => { :casual => casual, :week_number => @week_number, :global_hours_worked => @global_hours_worked, :global_normals_hours => @global_normals_hours, :global_h15 => @global_h15, :global_h50 => @global_h50, :global_h75 => @global_h75, :global_h100 => @global_h100, :global_pp => @global_pp, :cash_amount => @cash_amount, :lines_id_table => @lines_id_table } %>
						</tr>
					<% end %>
				<% end %>
			<% end %>
			
			<tr>
				<td colspan = 9 class = "ui-widget-content" ><h3>Totaux</h3></td>							
				<td class = "ui-widget-content" ><h3><%= @global_hours_worked %></h3></td>	
				<td class = "ui-widget-content" ><h3><%= @global_h15 %></h3></td>			
				<td class = "ui-widget-content" ><h3><%= @global_h50 %></h3></td>					
				<td class = "ui-widget-content" ><h3><%= @global_h75 %></h3></td>			
				<td class = "ui-widget-content" ><h3><%= @global_h100 %></h3></td>			
				<td class = "ui-widget-content" ><h3><%= @global_normals_hours %></h3></td>	
				<td class = "ui-widget-content" ><h3><%= @global_pp %></h3></td>											
			</tr>	
		<% end %>
	</tbody>
</table>	

<br />
<h3>Effectif: <%#= @casuals.count %><br />
Nombre total d'heures: <%= @global_hours_worked %><br />
Heures normales: <%= @global_normals_hours %><br />
Heures 15%: <%= @global_h15 %><br />
Heures 50%: <%= @global_h50 %><br />
Heures 75%: <%= @global_h75 %><br />
Heures 100%: <%= @global_h100 %><br />
Prime panier: <%= @global_pp %><br />
Montant total: <%= @cash_amount %></h3>

