	<table class="list-table">
		<thead>
			<tr>		
				<th width="24%">Matricule</th>		
				<th width="28%">Nom</th>	
				<th width="4%">
					<% if holiday?(@week_number, 1) %>
						<div style=" color:#000; font-weight:bold;">Lun</div>
					<% else %>
						Lun
					<% end %>				
				</th>
				<th width="4%">
					<% if holiday?(@week_number, 2) %>
						<div style=" color:#000; font-weight:bold;">Mar</div>
					<% else %>
						Mar
					<% end %>				
				</th>
				<th width="4%">
					<% if holiday?(@week_number, 3) %>
						<div style=" color:#000; font-weight:bold;">Mer</div>
					<% else %>
						Mer
					<% end %>				
				</th>
				<th width="4%">
					<% if holiday?(@week_number, 4) %>
						<div style=" color:#000; font-weight:bold;">Jeu</div>
					<% else %>
						Jeu
					<% end %>				
				</th>
				<th width="4%">
					<% if holiday?(@week_number, 5) %>
						<div style=" color:#000; font-weight:bold;">Ven</div>
					<% else %>
						Ven
					<% end %>				
				</th>
				<th width="4%">
					<% if holiday?(@week_number, 6) %>
						<div style=" color:#000; font-weight:bold;">Sam</div>
					<% else %>
						Sam
					<% end %>				
				</th>
				<th width="4%">
					<% if holiday?(@week_number, 0) %>
						<div style=" color:#000; font-weight:bold;">Dim</div>
					<% else %>
						Dim
					<% end %>				
				</th>
				<th width="5%">NH</th>	
				<th width="5%">H15%</th>
				<th width="5%">H50%</th>		
				<th width="5%">H75%</th>
				<th width="5%">H100%</th>
				<th width="5%">HN</th>
				<th width="5%">PP</th>
			</tr>
		</thead>
		<tbody>		
			<% if @teams.empty? %>
				<tr>
					<td colspan = 16 class = "ui-widget-content" >Aucun pointage à afficher</td>									
				</tr>
			<% else %>
	<!-- Temporaires normaux -->
				<% @teams.each do |team| %>
	<!-- On détermine les temporaires normaux de l'équipe -->
					<tr>
						<td colspan = 16 class = "ui-widget-content" ><h3><%= team.team_name %> - Normaux</h3></td>
					</tr>
					<% 
						@normals_casuals = team.casuals.where("casual_type_id = #{CasualType.find_by_type_name("Normal").id}") 
					%>
					<% if @normals_casuals.empty? %>	
						<tr>				
							<td colspan = 16 class = "ui-widget-content" >Aucun pointage à afficher</td>	
						</tr>													
					<% else %>
						<% @normals_casuals.each do |casual| %>
	<!-- si le temporaire n'a pas de pointage pour cette semaine -->
							<tr>
								<%= render :partial => "normals_section_global_report", :locals => { :casual => casual, :week_number => @week_number, :global_hours_worked => @global_hours_worked, :global_normals_hours => @global_normals_hours, :global_h15 => @global_h15, :global_h50 => @global_h50, :global_h75 => @global_h75, :global_h100 => @global_h100, :global_pp => @global_pp, :cash_amount => @cash_amount, :lines_id_table => @lines_id_table, :number_of_normals => @number_of_normals } %>
							</tr>
						<% end %>
					<% end %>
				<% end %>
			
				<tr>
					<td colspan = 9 class = "ui-widget-content" ><h3>Totaux</h3></td>							
					<td class = "ui-widget-content" ><h3><%= @global_hours_worked %></h3></td>	
					<td class = "ui-widget-content" ><h3><%= @global_h15 %></h3></td>			
					<td class = "ui-widget-content" ><h3><%= @global_h50 %></h3></td>					
					<td class = "ui-widget-content" ><h3><%= @global_h75 %></h3></td>			
					<td class = "ui-widget-content" ><h3><%= @global_h100 %></h3></td>			
					<td class = "ui-widget-content" ><h3><%= @global_normals_hours %></h3></td>	
					<td class = "ui-widget-content" ><h3><%= @global_pp %></h3></td>											
				</tr>	
			<% end %>
		</tbody>
	</table>	
  </div>

	<div class="page">
	<table border= 1 bordercolor="#666666" style="width:98%; text-align:left; border-collapse:collapse;">
		<tr>
			<td style="width:35%; font-weight:bold; padding:7px;">Effectif</td> 
			<td style="padding:7px;"><%= @number_of_normals %></td>
		</tr>
		<tr>
			<td style="font-weight:bold; padding:7px;">Nombre total d'heures</td>
			<td style="padding:7px;"><%= @global_hours_worked %></td>
		</tr>
		<tr>
			<td style="font-weight:bold; padding:7px;">Heures normales</td>
			<td style="padding:7px;"><%= @global_normals_hours %></td>
			<td style="padding:7px;"><%= (@global_normals_hours * CasualType.find_by_type_name("Normal").hourly_rate) %></td>
		</tr>
		<tr>
			<td style="font-weight:bold; padding:7px;">Heures 15%</td>
			<td style="padding:7px;"><%= @global_h15 %></td>
			<td style="padding:7px;"><%= (CasualType.find_by_type_name("Normal").hourly_rate * (1 + 0.15) * @global_h15) %></td>
		</tr>
		<tr>
			<td style="font-weight:bold; padding:7px;">Heures 50%</td> 
			<td style="padding:7px;"><%= @global_h50 %></td>
			<td style="padding:7px;"><%= (CasualType.find_by_type_name("Normal").hourly_rate * (1 + 0.50) * @global_h50) %></td>
		</tr>
		<tr>
			<td style="font-weight:bold; padding:7px;">Heures 75%</td> 
			<td style="padding:7px;"><%= @global_h75 %></td>
			<td style="padding:7px;"><%= (CasualType.find_by_type_name("Normal").hourly_rate * (1 + 0.75) * @global_h75) %></td> 
		</tr>
		<tr>
			<td style="font-weight:bold; padding:7px;">Heures 100%</td> 
			<td style="padding:7px;"><%= @global_h100 %></td>
			<td style="padding:7px;"><%= (CasualType.find_by_type_name("Normal").hourly_rate * (1 + 1) * @global_h100) %></td> 
		</tr>
		<tr>
			<td style="font-weight:bold; padding:7px;">Prime panier</td>
			<td style="padding:7px;"><%= @global_pp %></td>
			<td style="padding:7px;"><%= (@global_pp * CasualType.find_by_type_name("Normal").prime) %></td> 
		</tr>
		<tr>
			<td style="font-weight:bold; padding:7px;">MONTANT TOTAL</td> 
			<td style="font-weight:bold; padding:7px;" colspan = 2><%= @cash_amount %></td>
		</tr>
	</table>

	<br /> <br />
	<h2 class="short-title">
		<div style="font-weight:bold; float: left;">Visa chef de production</div>
		<div style="font-weight:bold; float: right;">Visa direction des ressources humaines</div>
		<div align = "center" style="font-weight:bold;">Visa directeur <%= Workshop.find(current_user.status_number).workshop_name %></div>	
	</h2>
	</div>
<% end %>

