<body>
<%=  %>
<!-------------------------------- Pour les temporaires des équipes de l'atelier actuel ------------>
<% if @normals %>
	<div class="page">
	<h2 class="top-title">Fiche de pointage des normaux du <%= @date.beginning_of_week.strftime("%d") %> au <%= @date.end_of_week.strftime("%d %B %Y") %><br />
	<%= @section.nil? ? "Atelier: #{Workshop.find_by_id(current_user.status_number).workshop_name}" : "Section: #{@section.section_name}" %>
	</h2><br />

	<% 
		 	
		 @global_hours_worked = 0
		 @global_normals_hours = 0
		 @global_h15 = 0
		 @global_h50 = 0
		 @global_h75 = 0
		 @global_h100 = 0
		 @global_pp = 0
		 @cash_amount = 0
		 @number_of_normals = 0
